<div class="container-sm flex items-center justify-center flex-1 py-12">
  <div class="card w-full">
    <div class="card-body text-center">
      <!-- Success Icon -->
      <div class="w-16 h-16 mx-auto mb-4 bg-success/20 rounded-full flex items-center justify-center">
        <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>

      <!-- Title -->
      <h1 class="text-2xl font-bold text-primary mb-2">Payment Successful!</h1>
      <p class="text-secondary mb-6">Your payment has been processed successfully.</p>

      <!-- Order Details -->
      <div class="card-flat mb-6 text-left">
        <div class="card-body">
          <h3 class="font-semibold text-primary mb-3">Order Summary</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-secondary">Order ID:</span>
              <span class="font-medium text-primary">#<%%= @order.id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-secondary">Product:</span>
              <span class="font-medium text-primary"><%%= @order.product_name %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-secondary">Amount:</span>
              <span class="font-medium text-primary"><%%= number_to_currency(@order.amount, unit: @order.currency.upcase + ' ') %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-secondary">Customer:</span>
              <span class="font-medium text-primary"><%%= @order.customer_name %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="space-y-3">
        <%%= link_to "View Order Details", @order, class: "btn-outline-primary w-full" %>
        <% if @for_test %>
        <%%= link_to "Create New Order", new_order_path, class: "btn-primary w-full" %>
        <% else %>
        <%%= link_to "Back to Orders", orders_path, class: "btn-primary w-full" %>
        <% end %>
      </div>

      <!-- Additional Info -->
      <div class="mt-6 text-xs text-muted">
        <p>A confirmation email has been sent to <%%= @order.customer_email %></p>
      </div>
    </div>
  </div>
</div>