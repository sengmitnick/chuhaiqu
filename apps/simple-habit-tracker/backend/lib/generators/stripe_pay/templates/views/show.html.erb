<div class="container-lg py-12">
      <div class="space-y-6">
        <!-- Header -->
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-primary">Order #<%%= @order.id %></h1>
            <p class="text-secondary mt-2">Order details and payment information</p>
          </div>
          <div class="flex items-center space-x-4">
            <span class="<%%= case @order.status
                  when 'paid' then 'badge-success'
                  when 'failed' then 'badge-danger'
                  when 'pending' then 'badge-warning'
                  else 'badge-neutral'
                  end %>">
              <%%= @order.display_status %>
            </span>
          </div>
        </div>

        <!-- Order Details -->
        <div class="card">
          <div class="card-body">
            <h2 class="text-xl font-semibold text-primary mb-6">Order Information</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="form-label">Product</label>
                <p class="text-lg text-primary font-medium"><%%= @order.product_name %></p>
              </div>

              <div>
                <label class="form-label">Amount</label>
                <p class="text-lg text-primary font-medium"><%%= number_to_currency(@order.amount, unit: @order.currency.upcase + ' ') %></p>
              </div>

              <div>
                <label class="form-label">Customer Name</label>
                <p class="text-lg text-primary font-medium"><%%= @order.customer_name %></p>
              </div>

              <div>
                <label class="form-label">Customer Email</label>
                <p class="text-lg text-primary font-medium"><%%= @order.customer_email %></p>
              </div>

              <div>
                <label class="form-label">Order Date</label>
                <p class="text-lg text-primary font-medium"><%%= @order.created_at.strftime("%B %d, %Y at %l:%M %p") %></p>
              </div>

              <div>
                <label class="form-label">Status</label>
                <%% case @order.status %>
                <%% when 'paid' %>
                  <span class="badge-success">Payment Completed</span>
                <%% when 'pending' %>
                  <span class="badge-warning">Payment Processing</span>
                <%% else %>
                  <span class="badge-danger">Payment Failed</span>
                <%% end %>
              </div>
            </div>
          </div>
        </div>

        <%% if @order.status == 'failed' %>
        <!-- Failed Payment Notice -->
        <div class="alert-warning mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-warning mr-3" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium">Payment Failed</h3>
              <p class="mt-1 text-sm">Your previous payment attempt was unsuccessful. You can try again with a different payment method.</p>
            </div>
          </div>
        </div>
        <%% end %>

        <%%= render 'pay_button', order: @order, text: @order.failed? ? 'Retry Payment' : 'Complete Payment', css_class: 'btn-primary px-6 py-3 text-lg' %>

        <!-- Actions -->
        <div class="flex justify-between mt-6">
          <div>
            <%%= link_to "â† Back to Home", '/', class: "btn-ghost" %>
          </div>

          <%% if @order.pending? || @order.failed? || @order.processing? %>
            <div class="flex items-center gap-3">
              <%%= button_to "Cancel Order",
                  order_path(@order),
                  method: :delete,
                  class: "btn-danger",
                  data: { confirm: "Are you sure you want to cancel this order?" } %>
            </div>
          <%% end %>
        </div>
    </div>
  </div>
</div>
