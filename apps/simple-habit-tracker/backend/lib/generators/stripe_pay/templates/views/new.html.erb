<div class="container-md flex items-center justify-center flex-1 py-12">
  <div class="card w-full">
    <div class="card-body">
      <h1 class="text-3xl font-bold text-primary mb-8 text-center">Create New Order</h1>

    <%%= form_with model: @order, local: true, class: "space-y-6" do |form| %>
      <%%= render 'shared/form_error_message', model: @order %>

<% unless @auth -%>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%%= form.label :customer_name, class: "form-label" %>
          <%%= form.text_field :customer_name,
              class: "form-input",
              placeholder: "Enter your full name",
              required: true %>
        </div>

        <div>
          <%%= form.label :customer_email, class: "form-label" %>
          <%%= form.email_field :customer_email,
              class: "form-input",
              placeholder: "your@email.com",
              required: true %>
        </div>
      </div>

<% end -%>
      <div>
        <%%= form.label :product_name, class: "form-label" %>
        <%%= form.text_field :product_name,
            class: "form-input",
            placeholder: "Product or service name",
            required: true %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%%= form.label :amount, "Amount", class: "form-label" %>
          <%%= form.number_field :amount,
              step: 0.01,
              min: 0.50,
              class: "form-input",
              placeholder: "0.00",
              required: true %>
        </div>

        <div>
          <%%= form.label :currency, class: "form-label" %>
          <%%= form.select :currency,
              options_for_select([
                ['US Dollar (USD)', 'usd'],
                ['Euro (EUR)', 'eur'],
                ['British Pound (GBP)', 'gbp']
              ], 'usd'),
              {},
              { class: "form-select" } %>
        </div>
      </div>

      <div class="pt-6">
        <div class="flex items-center justify-center">
          <%%= form.submit "Create Order",
              class: "btn-primary btn-lg px-8" %>
        </div>
      </div>

      <div class="alert-info mt-6">
        <p class="text-sm">
          <strong>Next Step:</strong> After creating your order, you'll be able to proceed with secure payment.
        </p>
      </div>
    <%% end %>
    </div>
  </div>
</div>
